{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LOCK-3 Replay Packet Schema v1.0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "packet_id",
    "ts",
    "judgment_id",
    "approval_record_id",
    "execution_run_id",
    "inputs_digest",
    "artifacts",
    "prev_hash",
    "hash"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "lock3/replay_packet@1.0" },
    "packet_id": { "type": "string", "minLength": 8, "maxLength": 128 },
    "ts": { "type": "string", "minLength": 10, "maxLength": 40 },
    "judgment_id": { "type": "string", "minLength": 3, "maxLength": 128 },
    "approval_record_id": { "type": "string", "minLength": 3, "maxLength": 128 },
    "execution_run_id": { "type": "string", "minLength": 3, "maxLength": 128 },
    "inputs_digest": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "artifacts": {
      "type": "array",
      "minItems": 0,
      "maxItems": 256,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "kind"],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1,
            "maxLength": 300,
            "pattern": "^(?!/)(?!.*://)(?!.*\\.{2})([A-Za-z0-9._\\-/]+)$"
          },
          "kind": {
            "type": "string",
            "enum": ["card", "policy", "contract", "log", "other"]
          },
          "digest": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
        }
      }
    },
    "prev_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
  }
}
