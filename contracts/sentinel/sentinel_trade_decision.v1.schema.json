{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sentinel_trade_decision.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "domain_id", "intent_id", "decision", "reason"],
  "properties": {
    "schema": { "const": "sentinel_trade_decision.v1" },
    "domain_id": { "const": "sentinel.trade" },
    "intent_id": { "type": "string", "minLength": 8 },
    "decision": { "enum": ["ALLOW_DRY_RUN", "DENY"] },
    "reason": { "type": "string", "minLength": 1 },
    "risk_flags": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
