{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "direction_decision.v1.schema.json",
  "title": "direction_decision.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "ts_utc",
    "symbol",
    "timeframe",
    "decision",
    "reason",
    "evidence"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "ts_utc": {
      "type": "string",
      "minLength": 1
    },
    "symbol": {
      "type": "string",
      "minLength": 1
    },
    "timeframe": {
      "type": "string",
      "minLength": 1
    },
    "decision": {
      "type": "string",
      "enum": [
        "NO_TRADE",
        "LONG",
        "SHORT"
      ]
    },
    "reason": {
      "type": "string",
      "minLength": 1
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
