{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sentinel_trade_intent.v1.json",
  "title": "sentinel_trade_intent.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "intent_id",
    "track_id",
    "mode",
    "producer",
    "asset",
    "side",
    "analysis_summary",
    "quality",
    "no_execute",
    "created_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "sentinel_trade_intent.v1"
    },
    "intent_id": {
      "type": "string",
      "minLength": 8
    },
    "track_id": {
      "type": "string",
      "enum": ["SIMULATION", "INTERNAL"]
    },
    "mode": {
      "type": "string",
      "enum": ["DRY_RUN"]
    },
    "producer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["domain", "component"],
      "properties": {
        "domain": {
          "type": "string",
          "const": "sentinel"
        },
        "component": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "asset": {
      "type": "string",
      "minLength": 3
    },
    "side": {
      "type": "string",
      "enum": ["LONG", "SHORT", "FLAT"]
    },
    "analysis_summary": {
      "type": "string",
      "minLength": 1
    },
    "quality": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "provider_id",
        "retrieved_at",
        "source_timestamp",
        "staleness_flag",
        "quality_flags"
      ],
      "properties": {
        "provider_id": {"type": "string", "minLength": 1},
        "retrieved_at": {"type": "string", "minLength": 1},
        "source_timestamp": {"type": "string", "minLength": 1},
        "staleness_flag": {"type": "boolean"},
        "quality_flags": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "no_execute": {
      "type": "boolean"
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "forbidden_keys": {
      "type": "array",
      "items": {"type": "string"},
      "default": [
        "execute",
        "order",
        "submit_intent",
        "trade",
        "qty",
        "size",
        "price",
        "leverage",
        "position",
        "approve",
        "reject",
        "commit"
      ]
    }
  }
}
